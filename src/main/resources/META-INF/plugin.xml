<idea-plugin>
    <id>org.osipenko.pojo-booster</id>
    <name>POJO Booster</name>
    <vendor email="osipaandr@gmail.com">Osipenko</vendor>

    <description><![CDATA[
    Когда-нибудь эта штука сможет конвертировать pojo в полноценный DTO или Entity
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable instance="settings.SettingsManager"/>
    </extensions>

    <actions>
        <group text="POJO Booster" id="booster.common.PojoBooster" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action id="booster.toentity.BoostToEntityAction" class="booster.toentity.BoostToEntityAction" text="Boost To Entity">
                <add-to-group group-id="booster.common.PojoBooster" anchor="first"/>
                <keyboard-shortcut keymap="$default" first-keystroke="alt E"/>
            </action>
            <action id="booster.todto.BoostToDtoAction" class="booster.todto.BoostToDtoAction" text="Boost To DTO">
                <add-to-group group-id="booster.common.PojoBooster" anchor="first"/>
                <keyboard-shortcut keymap="$default" first-keystroke="alt D"/>
            </action>
            <action id="generator.action.GenerationAction" class="generator.action.GenerationAction" text="Generate POJO">
                <add-to-group group-id="booster.common.PojoBooster" anchor="first"/>
                <keyboard-shortcut keymap="$default" first-keystroke="alt G"/>
            </action>
        </group>
    </actions>
</idea-plugin>